{
  "manifest_version": 2,
  "name": "Amazon-BestBuy Price Checker",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
